<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.retrofitgeturldemo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_anime"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_anime_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.RetrofitGetUrlDemo">
        <activity
            android:name=".activity.InfoItemActivity"
            android:screenOrientation="portrait"
            android:exported="false"
    />

        <activity
            android:name=".activity.HomeActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            >
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>